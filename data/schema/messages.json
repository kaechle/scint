{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "LifeCycle": {
            "type": "object",
            "properties": {
                "started_on": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_on": {
                    "type": "string",
                    "format": "date-time"
                },
                "terminate_on": {
                    "type": "string",
                    "format": "date-time"
                },
                "ended_on": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Tag": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            }
        },
        "ProducerConsumer": {
            "oneOf": [
                {
                    "$ref": "#/definitions/User"
                },
                {
                    "$ref": "#/definitions/Agent"
                },
                {
                    "$ref": "#/definitions/Entity"
                }
            ]
        },
        "Message": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "lifecycle": {
                    "$ref": "#/definitions/LifeCycle"
                },
                "producer": {
                    "$ref": "#/definitions/ProducerConsumer"
                },
                "consumer": {
                    "$ref": "#/definitions/ProducerConsumer"
                },
                "content": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "lifecycle",
                "producer",
                "consumer",
                "content"
            ]
        },
        "PersistedMessage": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "message_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "lifecycle": {
                    "$ref": "#/definitions/LifeCycle"
                },
                "topic": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Tag"
                    }
                },
                "content_summary": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "message_id",
                "lifecycle",
                "topic",
                "content_summary"
            ]
        },
        "MessageThread": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "lifecycle": {
                    "$ref": "#/definitions/LifeCycle"
                },
                "messages": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/Message"
                            },
                            {
                                "$ref": "#/definitions/PersistedMessage"
                            }
                        ]
                    }
                },
                "topic": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Tag"
                    }
                }
            },
            "required": [
                "id",
                "lifecycle",
                "messages",
                "topic"
            ]
        },
        "PersistedMessageThread": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "thread_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "lifecycle": {
                    "$ref": "#/definitions/LifeCycle"
                },
                "topic": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Tag"
                    }
                },
                "content_summary": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "thread_id",
                "lifecycle",
                "topic",
                "content_summary"
            ]
        }
    },
    "type": "object",
    "properties": {
        "message": {
            "$ref": "#/definitions/Message"
        },
        "persistedMessage": {
            "$ref": "#/definitions/PersistedMessage"
        },
        "messageThread": {
            "$ref": "#/definitions/MessageThread"
        },
        "persistedMessageThread": {
            "$ref": "#/definitions/PersistedMessageThread"
        }
    }
}